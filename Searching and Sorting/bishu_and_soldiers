#include<bits/stdc++.h>
using namespace std;
void solve(long long int arr[],long long int n,long long int power)
{
	int kill=0,sum=0;
	for(int i=0;i<n;i++)
	{
		if(arr[i]<=power)
		{
			kill++;
			sum+=arr[i];
		}
	} cout<<kill<<" "<<sum;
}
int main()
{
	long long int n;
    cin>>n;

	long long int arr[n];
	for(int i=0;i<n;i++)
	{
		cin>>arr[i];
	}

	long long int q; 
    cin>>q;

	for(int i=0;i<q;i++)
	{
		int power;
        cin>>power;
        
		solve(arr,n,power);
		cout<<endl;
	}
}