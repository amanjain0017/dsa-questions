class Solution
{
    public:
    //Function to evaluate a postfix expression.
    int evaluatePostfix(string S)
    {
        // Your code here
        stack<int> s;
        
        for(int i = 0; i<S.size(); i++){
            char ch = S[i];
            
            if (ch != '*' && ch != '/' && ch != '+' && ch != '-') {
                s.push(ch - '0');
            } 
            else {
                int num2 = s.top();
                s.pop();
                
                int num1 = s.top();
                s.pop();
                
                switch(ch){
                    case '+': s.push(num1 + num2);
                             break;
                    case '-': s.push(num1 - num2);
                             break;
                    case '*': s.push(num1 * num2);
                             break;
                    case '/': s.push(num1 / num2);
                             break;
                }
            }
        
        }return s.top();
    }
};